{
  "manifest_version": 2,
  "name": "Alt Manager for roblox",
  "version": "0.0.0",

  "icons": {
    "1000":"assets/icons/favicon.png"
  },
  "description": "This extension allows you to manage your roblox alt account.",
  "homepage_url": "https://github.com/TheEpicFace007/roblox-alt-account-manager",
  "short_name": "Alt Manager",

  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "1000": "assets/icons/favicon.png"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false
  },

  "background": {
    "scripts": [
      "js/background.bundle.js"
    ]
  },

  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "js/contentScript.bundle.js"
    ]
  }]
}